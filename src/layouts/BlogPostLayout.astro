---
const {frontmatter} = Astro.props;
import Layout from "../layouts/Layout.astro"

---


<Layout title="Blog Posts">

    <article class="prose lg:prose-xl p-4 space-y-4 bg-white mx-auto w-full md:max-w-3xl text-left">
        <p class="italic text-sm text-gray text-right">{frontmatter.pubDate.slice(0,10)}</p>
        {/* Title */}
        <h1 class="text-4xl font-bold text-left mb-4">
        {frontmatter.title}
        </h1>

    

        <p class="text-m text-left text-gray-600 mb-4">
        <span class="font-medium">By:</span> {frontmatter.author}
        </p>

        {/* Description */}
        
        

        {/* Post Content */}
        <div class="prose prose-lg max-w-none markdown-content">
        <slot />
        </div>


        <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
        <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    </article>
    <style>
        .markdown-content p {
          @apply text-lg leading-relaxed my-4;
          text-indent: 2em; /* This is the line that adds indentation to paragraphs. */
        }

        .markdown-content {
          @apply prose prose-lg text-gray-600 mx-auto;
          @apply flex flex-col items-center;
          overflow-wrap: break-word;

        }
      
        .markdown-content h1 {
          @apply text-4xl font-semibold text-gray-900 my-4;
        }
      
        .markdown-content h2 {
          @apply text-3xl font-semibold text-gray-800 my-4;
        }
      
        .markdown-content h3 {
          @apply text-2xl font-semibold text-gray-700 my-4;
        }
      
        .markdown-content p {
          @apply text-lg leading-relaxed my-4;
        }
      
        .markdown-content ul {
          @apply list-disc list-inside my-4;
        }
      
        .markdown-content ol {
          @apply list-decimal list-inside my-4;
        }
      
        .markdown-content blockquote {
          @apply border-l-4 border-gray-200 pl-4 italic text-gray-500;
        }
      
        .markdown-content code {
          @apply bg-gray-100 text-sm p-1 rounded;
        }
      
        .markdown-content pre {
          @apply bg-gray-800 text-white p-4 rounded overflow-auto;
        }
      
        .markdown-content img {
          @apply my-4 rounded shadow-md;
        }
      
        .markdown-content a {
          @apply text-blue-500 underline;
        }

      

      </style>
      
        
</Layout>


