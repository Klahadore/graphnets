---
import { Image} from '@astrojs/image/components'

const { title, author, description , imageSrc, imageAlt} = Astro.props;
---


<div class="flex bg-white shadow-md rounded-md overflow-hidden border border-gray-200">
    <Image 
      src={imageSrc} 
      alt={`Cover of ${title}`}
      width={100}
      height={150}
      class="w-24 h-36 object-cover" 
    />
    <div class="flex-1 p-4">
      <h2 class="font-bold text-xl mb-2">{title}</h2>
      <p class="text-gray-700" >By: {author}</p>
      <p class="text-gray-700 truncate">{description}</p>
    </div>
</div>
