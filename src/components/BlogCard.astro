---

// import astro image

import { Image } from '@astrojs/image/components';



const { href, title, description , date, imageSrc, imageAlt} = Astro.props;

---


<a href={href} class="flex flex-col items-center bg-white rounded-none shadow-none md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    <Image 
    src={imageSrc} 
    alt={imageAlt}
	width={1200}
	height={900}
	format="avif"
	fit="cover"
	quality={80}
	aspectRatio="4:3"
	class="object-cover w-full  h-96 md:h-auto md:w-48 md:rounded-none "
	/>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
		<p class="font-normal text-grey-600">{date.slice(0,10)}</p>
    </div>
</a>
